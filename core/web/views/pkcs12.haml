%h2 Bundled PKCS #12
%legend Selected Certificate
%table.table.table-striped.table-hover.table-sm
  %thead
    %tr
      %th Common Name
  %tbody
    %tr
      %td 
        = @crt.cn

%form#pkcs12.form-horizontal{ action: "/admin/certificates/#{@crt.cn}.p12", method: 'post' }
  %fieldset
    %legend Enter Passphrase
    .form-group
      %label{ for: 'certificate' } Certificate Key
      .input-group
        %input.form-control#certificate{ name: 'passphrase[certificate]', type: 'password', autocomplete: 'off', placeholder: '' }
        .input-group-append
          %span.input-group-text.show-pass{ title: 'Show password', 'data-toggle' => 'tooltip'}
            %i.fas.fa-eye#show_eye

    .form-group
      .form-check
        %input.form-check-input{ name: 'passphrase[legacypbe]', type: 'checkbox', id: 'legacypbe' }
        %label.form-check-label{ for: 'legacypbe' }
          Legacy PKCS#12 (Keypbe,Certpbe: PBE-SHA1-3DES MAC: SHA1)
    .form-group
      %button.btn.btn-primary{ type: 'submit' } Get .p12 file