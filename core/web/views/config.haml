%h2 Settings
%nav
  #nav-tab.nav.nav-tabs{:role => 'tablist'}
    %button#nav-auth-tab.nav-link{:class => ('active' if @tab_id==0), 'aria-controls' => 'nav-auth', 'aria-selected' =>  (@tab_id==0 ? 'true': 'false'), 'data-target' => '#nav-auth', 'data-toggle' => 'tab', :role => 'tab', :type => 'button'} Auth
    %button#nav-net-perm-tab.nav-link{:class => ('active' if @tab_id==1), 'aria-controls' => 'nav-net-perm', 'aria-selected' => (@tab_id==1 ? 'true': 'false'), 'data-target' => '#nav-net-perm', 'data-toggle' => 'tab', :role => 'tab', :type => 'button'} Allowed IPs
    %button#nav-vpn-defaults-tab.nav-link{:class => ('active' if @tab_id==2),'aria-controls' => 'nav-vpn-defaults', 'aria-selected' => (@tab_id==2 ? 'true': 'false'), 'data-target' => '#nav-vpn-defaults', 'data-toggle' => 'tab', :role => 'tab', :type => 'button'} VPN defaults
#nav-tabContent.tab-content
  #nav-auth.tab-pane.fade.col-md-6.col-xs-12{:class => ('active show' if @tab_id==0),'aria-labelledby' => 'nav-auth-tab', :role => 'tabpanel'}
    %legend Authentication
    %form#config_auth{ action: '/admin/config', method: 'post' }
      %fieldset
        %input{type: 'hidden', value: '1', name: 'authcfg[auth]'} 
        %input{type: 'hidden', value: '0', name: 'tab_id'} 
        .form-group
          %label{ for: 'username' } Username
          %input.form-control#username{ name: 'authcfg[username]', type: 'text', placeholder: @authcfg.nil? || @authcfg['username'].nil? ? 'prefer not admin, root etc' : 'Username already created' }
        .form-group
          %label{ for: 'authcfg[password]' } Password
          %input.form-control#password{ name:'authcfg[password]', type:'password', placeholder:  @authcfg.nil? || @authcfg['password'].nil? ? '' : 'Password already created'}
        .form-group
          %label{ for: 'authcfg[confirm_password]' } Confirm Password
          %input.form-control#confirm_password{ name:'authcfg[confirm_password]', type:'password'}
          
        .form-group
          .form-check
            %label.form-check-label{ for: 'enable' }
            %input.form-check-input#enable{ type: 'checkbox', name: 'authcfg[enable]', value: 1, checked: @authcfg.nil? ? false : @authcfg['enable'] } Enable authentication for not allowed IPs
        .form-group
          %button.btn.btn-primary{ type: 'submit' } Set
          
  #nav-net-perm.tab-pane.fade.col-md-6.col-xs-12{:class => ('active show' if @tab_id==1),'aria-labelledby' => 'nav-net-perm-tab', :role => 'tabpanel'}
    %legend Allowed IPs
    
    %form#config_add_myip{ action: '/admin/config', method: 'post' }
      .form-group
        .input-group
          %input{type: 'hidden', value: '1', name: 'tab_id'} 
          %input{type: 'hidden', value: '1', name: 'authcfg[allow_ip]'} 
          %input.form-control{type: 'text', name: 'authcfg[ip]', value: "#{@my_ip}", placeholder: "#{@my_ip}", readonly: 'true'}
          %span.input-group-btn
            %button.btn.btn-primary{ type: 'submit' } Add my IP
    
    %form#config_add_ip{ action: '/admin/config', method: 'post' }
      .form-group
        .input-group
          %input{type: 'hidden', value: '1', name: 'tab_id'} 
          %input{type: 'hidden', value: '1', name: 'authcfg[allow_ip]'} 
          %input.form-control#allowip{ name: 'authcfg[ip]', type: 'text', placeholder: 'ipv4 or ipv6 network or ipaddress', |
            'title' => 'e.g. 192.168.0.122 10.0.0.0/24 fdf8:e6f6:68cd::/48 fdfd:590e:52b2::1', 'data-toggle' => 'tooltip'}
            
          %span.input-group-btn
            %button.btn.btn-primary{ type: 'submit' } Add
    
    %form#config_rm_ips{ action: '/admin/config', method: 'post' }      
      .form-group
        %input{type: 'hidden', value: '1', name: 'tab_id'} 
        %input{type: 'hidden', value: '1', name: 'authcfg[disallow_ips]'} 
        %select.form-control#allowed_ips{ multiple: 'true', name: 'authcfg[ips][]' }
          -@allowed_ips.each do |ip|
            %option{ value: "#{ip}" } #{ip}
      %button.btn.btn-primary#remove_ip{ type: 'submit' } Remove Selected
      
  #nav-vpn-defaults.tab-pane.fade.col-md-6.col-xs-12{ :class => ('active show' if @tab_id==2),'aria-labelledby' => 'nav-vpn-defaults-tab', :role => 'tabpanel'}
    %legend VPN defaults
    %form#config_vpn_defaults{ action: '/admin/config', method: 'post' }
      %input{type: 'hidden', value: '2', name: 'tab_id'} 
      .form-group
        %label{ for: 'server_addr' } VPN Default Server Address
        %input.form-control#server_addr{ name: 'vpn_defaults[server_address]', type: 'text', placeholder: 'vpn.server.com', value: @vpn_defaults['server_address'] .nil? ? '' : @vpn_defaults['server_address'] }
      
      .form-group
        %label{ for: 'iface_name' } VPN Default Interface Name
        %input.form-control#iface_name{ name: 'vpn_defaults[iface_name]', type: 'text', placeholder: 'my_vpn', value: @vpn_defaults['iface_name'].nil? ? '' : @vpn_defaults['iface_name'] }
      
      %span.input-group-btn
        %button.btn.btn-primary{ type: 'submit' } Save
        
    