%h2 Bundled PKCS #12 packed with ipsec scripts
%legend Selected Certificate
%table.table.table-striped.table-hover.table-sm
  %thead
    %tr
      %th Common Name
  %tbody
    %tr
      %td 
        = @crt.cn

%form#pkcs12.form-horizontal{ action: "/admin/certificates/#{@crt.cn}.zip", method: 'post' }
  %fieldset
    %legend Enter Passphrase
    .form-group
      %label{ for: 'certificate' } Certificate Key
      %input.form-control#certificate{ name: 'passphrase[certificate]', type: 'password', autocomplete: 'off', placeholder: '' }
    .form-group  
      %label{ for: 'serveraddr' } Server Address
      %input.form-control#serveraddr{ name: 'serveraddr', type: 'text', placeholder: 'e.g. vpn.acme.com', value: @vpn_defaults['server_address'] .nil? ? '' : @vpn_defaults['server_address'] }
    .form-group  
      %label{ for: 'ifname' } VPN interface name
      %input.form-control#ifname{ name: 'ifname', type: 'text', placeholder: 'e.g. acme_vpn',value: @vpn_defaults['iface_name'].nil? ? '' : @vpn_defaults['iface_name'] }
    .form-group
      %button.btn.btn-primary{ type: 'submit' } Get .zip file