!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{name: "viewport", content: "width=device-width", "initial-scale" => "1", "shrink-to-fit" => "no"}
    %title RubyCA
    %link{ href: '/fontawesome/css/all.min.css', rel: 'stylesheet' }
    %link{ href: '/bootstrap/css/bootstrap.min.css', rel: 'stylesheet' }
    %link{ href: '/rubyca.css', rel: 'stylesheet' }
    
  %body
    %header
      %nav.navbar.navbar-dark.bg-dark.navbar-expand-lg 
        .container
          %button.navbar-toggler.navbar-toggler-right{type: "button", "data-toggle"=>"collapse", "data-target" => "#rubyca-navbar", |
            "aria-controls" => "rubyca-navbar", "aria-expanded" => "false", "aria-label"=>"Toggle navigation"}
            %span.navbar-toggler-icon
          
          %a.navbar-brand{ href: '/admin' } RubyCA

          .collapse.navbar-collapse{id: "rubyca-navbar" }
            %ul.navbar-nav.mr-auto
              %li.nav-item
                %a.nav-link{ href: '/admin/certificates' } Certificates
              %li.nav-item
                %a.nav-link{ href: '/admin/csrs' } Signing Requests
              %li.nav-item
                %a.nav-link{ href: '/admin/crl' } CRL
              %li.nav-item
                %a.nav-link{ href: '/admin/config' } Settings
    %section
      .container
        =styled_flash
        = yield
        
  %script{ src: '/jquery/jquery-3.3.1.min.js' }
  %script{ src: '/popper/popper.min.js' }'
  %script{ src: '/bootstrap/js/bootstrap.min.js' }'
  %script{ src: '/rubyca.js' }'